@model IEnumerable<EverestAlbumLibrary.Models.MemberCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr class="table-success">
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalLoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturningDays)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalLoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturningDays)
            </td>
            <td>
                <Button class="btn btn-outline-warning">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</Button> |
                <Button class="btn btn-outline-success">@Html.ActionLink("Details", "Details", new { id = item.Id })</Button> |
                <Button class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</Button>
            </td>
        </tr>
    }

</table>
